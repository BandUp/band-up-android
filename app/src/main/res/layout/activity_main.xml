<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:hint="Username" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etUsername"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etUsername"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etPassword"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etPassword"
        android:onClick="onClickSignIn"
        android:text="Sign In" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnSignIn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSignIn"
        android:onClick="onClickSignUp"
        android:text="Sign Up" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Genres"
        android:id="@+id/btnGoToGenres"
        android:onClick="onClickGoToGenres"
        android:layout_above="@+id/btnGoToInstruments"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnGoToInstruments" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Instruments"
        android:id="@+id/btnGoToInstruments"
        android:onClick="onClickGoToInstruments"
        android:layout_above="@+id/btnGoToChat"
        android:layout_alignEnd="@+id/btnGoToChat"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Chat"
        android:id="@+id/btnGoToChat"
        android:onClick="onClickGoToChat"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btnSignUp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
