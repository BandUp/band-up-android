<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.melodies.bandup.UserList"
    tools:showIn="@layout/app_bar_user_list">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/user_list_user_partial"
            android:id="@+id/user_partial_view"
            android:visibility="invisible" />
    </android.support.v7.widget.CardView>

    <!-- Go to Chat temporary button -->
    <Button
        android:text="@string/go_to_chat_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtToChat"
        android:layout_gravity="bottom"
        android:onClick="onClickChat" />
    <!-- Go to Chat temporary button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <!-- Upload Image temporary button -->
    <Button
        android:text="@string/user_take_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/onClickSelectImage"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:onClick="onClickTakePicture" />
    <!-- Upload Image temporary button -->
    <!-- Upload Image temporary button -->
    <Button
        android:text="@string/user_select_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/btnUploadImage"
        android:layout_gravity="bottom"
        android:onClick="onClickSelectPicture" />
    <!-- Upload Image temporary button -->
    </LinearLayout>

    <!-- Temporary layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <Button
            android:text="@string/user_list_previous_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_gravity="bottom"
            android:onClick="onClickPreviousUser"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:text="@string/user_list_next_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_gravity="bottom"
            android:onClick="onClickNextUser"/>
    </LinearLayout>
    <!-- Temporary layout -->

</LinearLayout>
