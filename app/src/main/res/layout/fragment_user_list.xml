<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context="com.melodies.bandup.MainScreenActivity.UserListFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.melodies.bandup.MainScreenActivity.MainScreenActivity"
        tools:showIn="@layout/app_bar_user_list">

        <include layout="@layout/user_list_user_partial"
            android:id="@+id/user_partial_view"
            android:visibility="invisible" />
        <!-- Temporary layout -->
        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="@string/user_list_previous_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_gravity="bottom"
                android:onClick="onClickPreviousUser"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/user_list_next_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                android:layout_gravity="bottom"
                android:onClick="onClickNextUser"/>
        </LinearLayout>
        <!-- Temporary layout -->

    </LinearLayout>


</FrameLayout>
