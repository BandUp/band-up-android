<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    tools:context="com.melodies.bandup.MainScreenActivity.UserSearchFragment"
    android:orientation="vertical">

    <TextView
        android:text="Please enter search parameters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/search_user_id"
        android:hint="@string/login_username"
        android:inputType="text"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Ages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="10dp" />

    <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_seekBarAges"
        rsb:absoluteMinValue="14"
        rsb:absoluteMaxValue="99"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btn_select_genres"
        android:text="@string/select_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_select_genres"
        android:text="All genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_select_instruments"
        android:text="@string/select_instruments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_select_instruments"
        android:text="All instuments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_search"
        android:text="@string/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>
