<resources>

    <!-- Base application theme. -->
    <style name="BandUpTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BandUpTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="BandUpTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/bandUpYellow</item>
        <item name="colorControlActivated">@color/bandUpYellow</item>
    </style>

    <style name="BandUpThemeNoActionBar" parent="BandUpTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="LoginBackground" parent="BandUpThemeNoActionBar">
        <item name="android:windowBackground">@drawable/login_background</item>
    </style>

    <style name="DoubleListItemText">
            <item name="android:textColor">#ffffff</item>
            <item name="android:shadowColor">#000000</item>
            <item name="android:shadowDx">0</item>
            <item name="android:shadowDy">0</item>
            <item name="android:shadowRadius">20</item>
    </style>
</resources>
